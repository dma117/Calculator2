<Window x:Class="Class_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Class_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
<Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonDelete" Background="AliceBlue" Content="C" Grid.Row="5" Grid.Column="0" Click="ButtonDelete_Click"/>
        <Button x:Name="ButtonOne" Background="Beige"  Content="1" Grid.Row="3" Grid.Column="0" Click="ButtonOne_Click"/>
        <Button x:Name="ButtonTwo" Background="BlanchedAlmond" Content="2" Grid.Row="3" Grid.Column="1" Click="ButtonTwo_Click"/>
        <Button x:Name="ButtonDivide" Background="BurlyWood" Content="/" Grid.Row="1" Grid.Column="3" Click="ButtonDivide_Click"/>
        <Button x:Name="ButtonNine" Background="LightBlue"  Content="9" Grid.Row="1" Grid.Column="2" Click="ButtonNine_Click"/>
        <Button x:Name="ButtonSummurize" Background="LightPink"  Content="+" Grid.Row="4" Grid.Column="3" Click="ButtonSummurize_Click"/>
        <Button x:Name="ButtonMinus" Background="Ivory" Content="-" Grid.Row="3" Grid.Column="3" Click="ButtonMinus_Click"/>
        <Button x:Name="ButtonSix" Background="Lavender" Content="6" Grid.Row="2" Grid.Column="2" Click="ButtonSix_Click"/>
        <Button x:Name="ButtonX" Background="LemonChiffon"  Content="x" Grid.Row="2" Grid.Column="3" Click="ButtonX_Click"/>
        <Button x:Name="ButtonThree" Background="Linen"  Content="3" Grid.Row="3" Grid.Column="2" Click="ButtonThree_Click"/>
        <Button x:Name="ButtonEight" Background="LightSkyBlue" Content="8" Grid.Row="1" Grid.Column="1" Click="ButtonEight_Click"/>
        <Button x:Name="ButtonFive" Background="LightYellow"  Content="5" Grid.Row="2" Grid.Column="1" Click="ButtonFive_Click"/>
        <Button x:Name="ButtonSeven" Background="PaleGoldenrod"  Content="7" Grid.Row="1" Grid.Column="0" Click="ButtonSeven_Click"/>
        <Button x:Name="ButtonZero" Background="PeachPuff" Content="0" Grid.Row="4" Grid.Column="1" Click="ButtonZero_Click"/>
        <Button x:Name="ButtonEqual" Background="MistyRose"  Content="=" Grid.Row="4" Grid.Column="2" Click="ButtonEqual_Click"/>
        <Button x:Name="ButtonFour" Background="Snow"  Content="4" Grid.Row="2" Grid.Column="0"  Click="ButtonFour_Click"/>
        <Button x:Name="ButtonDot" Background="BlanchedAlmond" Content="," Grid.Row="4" Grid.Column="0" Click="ButtonDot_Click"/>

        <Button x:Name="ButtonBackspace" Background="Snow" Content="B" Grid.Row="5" Grid.Column="1"  Click="ButtonBackspace_Click"/>
        <Button x:Name="ButtonCE" Background="Snow"  Content="CE" Grid.Row="5" Grid.Column="2"  Click="ButtonCE_Click"/>
        <Button x:Name="ButtonMPlus" Background="Snow"  Content="M+" Grid.Row="5" Grid.Column="3"  Click="ButtonMPlus_Click"/>
        <Button x:Name="ButtonMMinus" Background="Snow"  Content="M-" Grid.Row="5" Grid.Column="4"  Click="ButtonMMinus_Click"/>
        <Button x:Name="ButtonMC" Background="Snow"  Content="MC" Grid.Row="4" Grid.Column="4"  Click="ButtonMC_Click"/>
        <Button x:Name="ButtonMR" Background="Snow"  Content="MR" Grid.Row="3" Grid.Column="4"  Click="ButtonMR_Click"/>
        <Button x:Name="ButtonMS" Background="Snow"  Content="MS" Grid.Row="2" Grid.Column="4"  Click="ButtonMS_Click"/>
        <Button x:Name="ButtonPlusMinus" Background="Snow"  Content="+/-" Grid.Row="1" Grid.Column="4"  Click="ButtonPlusMinus_Click"/>
        
        <TextBlock x:Name="BlockExpression" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize = "18" Grid.Row="0" Grid.ColumnSpan="3"/>

        <TextBlock x:Name="BlockMemory" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize = "18" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2"/>
        
        <Menu x:Name="MenuBar" Grid.Row="0" FontSize="15" VerticalAlignment="Top" Margin="0,0,118,0">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Info" Click="MenuItem_Click" Width="41"/>
        </Menu>
        
    </Grid>
</Window>
